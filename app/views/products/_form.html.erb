
<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6 col-sm-12 field">
      <%= form.label 'Group' %>
      <div>
      <%= form.collection_select(:group_id, Group.all, :id, :name) %>
      </div>
    </div>
  </div>
    
  <div class="row">
    <div class="col-md-6 col-sm-12 field">
      <%= form.label :amazon_asin %>
      <div>
        <%= form.text_field :amazon_asin, id: :product_amazon_asin %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 col-sm-12 field">
    <%= form.label :amazon_url %>
    <%= form.text_area :amazon_url, id: :product_amazon_url %>
  </div>
  </div>
  
  <div class="actions">
    <%= form.submit "Add product", class: 'btn-success' %>
  </div>
  <br>
<% end %>
